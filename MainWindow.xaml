<Window x:Class="DesktopAimTrainer.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DesktopAimTrainer"
        mc:Ignorable="d"
        Height="500" Width="400"
        WindowStartupLocation="CenterScreen"
        ResizeMode="CanMinimize">
    <Window.Resources>
        <local:LocalizationConverter x:Key="LocalizationConverter"/>
    </Window.Resources>
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <!-- 语言选择 -->
        <StackPanel Grid.Row="0" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,0,0,10">
            <TextBlock x:Name="LanguageLabel" VerticalAlignment="Center" Margin="0,0,5,0"/>
            <ComboBox x:Name="LanguageComboBox" Width="120" SelectedIndex="0" SelectionChanged="LanguageComboBox_SelectionChanged">
                <ComboBoxItem Content="简体中文" Tag="zh-CN"/>
                <ComboBoxItem Content="English" Tag="en-US"/>
            </ComboBox>
        </StackPanel>
        
        <!-- 配置区 -->
        <GroupBox x:Name="ConfigGroupBox" Grid.Row="1" Margin="0,0,0,20">
            <StackPanel Margin="10">
                <!-- 图标类型选择 -->
                <TextBlock x:Name="IconTypeLabel" Margin="0,0,0,5"/>
                <ComboBox x:Name="IconTypeComboBox" Margin="0,0,0,15" SelectedIndex="0">
                    <ComboBoxItem x:Name="RecycleBinItem"/>
                    <ComboBoxItem x:Name="NewFolderItem"/>
                    <ComboBoxItem x:Name="ExcelItem"/>
                    <ComboBoxItem x:Name="WordItem"/>
                    <ComboBoxItem x:Name="TextDocumentItem"/>
                </ComboBox>
                
                <!-- 训练模式选择 -->
                <TextBlock x:Name="TrainingModeLabel" Margin="0,0,0,5"/>
                <ComboBox x:Name="ModeComboBox" Margin="0,0,0,15" SelectedIndex="0" SelectionChanged="ModeComboBox_SelectionChanged">
                    <ComboBoxItem x:Name="CountModeItem"/>
                    <ComboBoxItem x:Name="TimeModeItem"/>
                </ComboBox>
                
                <!-- Count Mode 参数 -->
                <StackPanel x:Name="CountModePanel" Margin="0,0,0,15">
                    <TextBlock x:Name="TargetHitCountLabel" Margin="0,0,0,5"/>
                    <TextBox x:Name="TargetHitCountTextBox" Text="10" PreviewTextInput="NumberValidationTextBox"/>
                </StackPanel>
                
                <!-- Time Mode 参数 -->
                <StackPanel x:Name="TimeModePanel" Margin="0,0,0,15" Visibility="Collapsed">
                    <TextBlock x:Name="TotalDurationLabel" Margin="0,0,0,5"/>
                    <TextBox x:Name="TotalDurationTextBox" Text="60" PreviewTextInput="NumberValidationTextBox"/>
                    <TextBlock x:Name="TargetStayTimeLabel" Margin="0,10,0,5"/>
                    <TextBox x:Name="TargetStayTimeTextBox" Text="2000" PreviewTextInput="NumberValidationTextBox"/>
                </StackPanel>
                
                <!-- 开始训练按钮 -->
                <Button x:Name="StartButton" 
                        Click="StartButton_Click" 
                        Height="35" FontSize="14" FontWeight="Bold"/>
            </StackPanel>
        </GroupBox>
        
        <!-- 统计区 -->
        <GroupBox Grid.Row="2" x:Name="StatsGroupBox" Margin="0,0,0,20">
            <ScrollViewer VerticalScrollBarVisibility="Auto">
                <StackPanel x:Name="StatsPanel" Margin="10">
                    <TextBlock x:Name="NoDataTextBlock"
                               HorizontalAlignment="Center" 
                               VerticalAlignment="Center"
                               Foreground="Gray"
                               FontSize="14"/>
                </StackPanel>
            </ScrollViewer>
        </GroupBox>
        
        <!-- 快捷键提示 -->
        <TextBlock Grid.Row="3" 
                   x:Name="HotkeysTextBlock"
                   FontSize="10" 
                   Foreground="Gray"
                   TextWrapping="Wrap"/>
    </Grid>
</Window>
